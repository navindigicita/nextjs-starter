{
  "database": {
    "rules": "database.rules.json"
  },
  "hosting": {
    "public": "pages",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "!/@(js|css)/**",
        "destination": "/index.html"
      }
    ],
    "cleanUrls": true
  }
}
