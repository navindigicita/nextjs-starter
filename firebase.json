{
  "hosting": {
    "public": "out",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrite": [
      {
        "destination": "/fruit/[name]/index.html",
        "regex": "^/fruit/([^/]+?)(?:/)?$"
      },
      {
        "destination": "/[username]/index.html",
        "regex": "^/([^/]+?)(?:/)?$"
      }
    ]
  }
}